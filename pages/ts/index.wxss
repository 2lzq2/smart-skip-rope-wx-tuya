.wrap {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #232A2C;
}
.control-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.ble-status {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.ble-status-item {
  font-size: 28rpx;
}
.container {
  display: flex;
  flex-direction: column;
  width: 375pt;
  flex: 1;
  align-items: center;
}
.device-onLine-tip {
  font-size: x-small;
  color: rgba(255, 255, 255, 0.3);
}
.content {
  padding-top: 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
}
.score {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 450rpx;
}
.count-box {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.count-box-value {
  font-size: 160rpx;
  font-family: 'DIN Condensed';
  color: #0DB178;
}
.count-box-unit {
  color: #86898a;
  margin-left: 12rpx;
}
.count-tip {
  color: #D3D4D4;
  font-size: 28rpx;
  margin-top: -10rpx;
}
.items {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-top: 48rpx;
  box-sizing: border-box;
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-value {
  font-size: 22pt;
  font-family: 'DIN Condensed';
  color: #C7C9C9;
}
.item-label {
  color: #86898a;
  margin-top: 4pt;
}
.mode-box {
  margin-top: 72rpx;
}
.mode-item {
  display: flex;
  flex-direction: row;
  width: 670rpx;
  height: 120rpx;
  justify-content: space-between;
  align-items: center;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.05);
  padding: 40rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.mode-item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.icon {
  width: 92rpx;
  height: 92rpx;
}
.mode-item-title {
  color: rgba(255, 255, 255, 0.75);
  font-size: 16;
  font-weight: 500;
}
.mode-item-arrow {
  color: #76787A;
  font-size: 40rpx;
}
.circle-value {
  font-size: 40px;
  font-family: 'DIN Condensed';
  color: #0DB178;
}
.mode-button {  
  width: 500rpx;
  height: 100rpx;
  margin-top: 200rpx;
}
.mode-button-1 {
  position: relative;
  left: 0;
  top: 0;
  width: 500rpx;
  height: 100rpx;
  border-radius: 48rpx;
  padding: 40rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.mode-button-2 {
  position: relative;
  left: 0;
  top: 0;
  height: 100rpx;
  border-radius: 48rpx;
  padding: 40rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  background-color: #FF0000;
  margin-top: -124rpx;
}
.mode-button-title {
  position: relative;
  left: 0;
  top: 0;
  width: 500rpx;
  height: 120rpx;
  color: #000000;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-top: -94rpx;
}
.popupmain{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}
.popupitem{
  margin-top: 24rpx;
}